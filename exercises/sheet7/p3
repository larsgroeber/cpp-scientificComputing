#include <iostream>

using namespace std;


//defining the recursive function
void recursion()
{
    int c = 0;     //a variable for counting the steps
    double r = 0;  //parameter r from the exercise
    double y
    y=rand() %1;   //rolling a random y
    if (0 <= y <= 0.5);
        y = r * y;
        c+=1;
    if (0.5 < y <= 1);
        y = r - r * y;
        c+=1;
}




int main()
{
    recursion();
}
